@model Quote

@{
    ViewBag.Title = "Create Employee";

}

<form enctype="multipart/form-data" asp-controller="Quotes" asp-action="Post" method="post" class="mt-3">

    <div>
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div>
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div>
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="Author" class="col-sm-2 col-form-label"></label>
        <div>
            <input asp-for="Author" class="form-control" placeholder="Author">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="Type" class="col-sm-2 col-form-label"></label>
        <div>
            <input asp-for="Type" class="form-control" placeholder="Type">
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
        <div>
            <input asp-for="CreatedAt" class="form-control" placeholder="Type">
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit">Add Quote</button>
</form>